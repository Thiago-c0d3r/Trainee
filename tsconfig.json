{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "commonjs",                 
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "strict": true,                       
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",           
    "resolveJsonModule": true,            
    "noImplicitAny": true,                
    "sourceMap": true                     
  },
  
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
